{
  "compilerOptions": {
    "target": "ES2020",                           // Target ECMAScript version
    "module": "commonjs",                         // Use CommonJS modules
    "strict": true,                               // Enable strict type-checking options
    "esModuleInterop": true,                      // Enable ES module imports
    "rootDir": "./src"                            // Root directory for TypeScript files
  },
  "include": [
    "src/**/*.ts"  // Specify TypeScript source files
  ],
  "exclude": [
    "node_modules"
  ]
}
